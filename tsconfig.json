{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@core/*": ["./src/core/*"],
      "@library": ["./src/library"],
      "@ui": ["./src/ui"],
      "@api": ["./src/api.ts"],
      "@config": ["./src/config"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["./node_modules/*"]
}
